{
  "title": "CertifyMe app",
  "description": "CertifyMe backend api description",
  "license": {
    "name": "MIT",
    "url": "https://opensource.org/licenses/MIT"
  },
  "version": "1.0.0",
  "host": "localhost:3000",
  "basePath": "/api",
  "tags": [
    {
      "name": "Users",
      "description": "List of operations availables on users"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/v1/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Will retrieve list of all users",
        "description": "Wil retrieve list of all users",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "List of all users in the application",
            "schema": {
              "$ref": "#definitions/user"
            }
          },
          "404": {
            "description": "No users present in the application",
            "schema": {
              "$ref": "#definitions/user"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "user": {
      "required": ["firstName", "lastName", "email", "practice", "roles"],
      "properties": {
        "id": {
          "type": "integer"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "practice": {
          "type": "string"
        },
        "roles": {
          "type": "string"
        }
      }
    }
  }
}
